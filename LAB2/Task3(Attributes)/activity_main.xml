<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="393dp"
        android:layout_height="53dp"
        android:hint="@string/app_name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button_yellowBack"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:text="@string/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toEndOf="@+id/button_size8"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button_size8"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:text="@string/size_8sp"
        app:layout_constraintBottom_toTopOf="@+id/button_whiteBack"
        app:layout_constraintEnd_toStartOf="@+id/button_size24"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.85" />

    <Button
        android:id="@+id/button_whiteBack"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:text="@string/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_yellowBack"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button_redText"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:text="@string/redText"
        app:layout_constraintBottom_toTopOf="@+id/button_size24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.507" />

    <Button
        android:id="@+id/button_size24"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:text="@string/size_24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_yellowBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.85" />

    <Button
        android:id="@+id/button_blackText"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:text="@string/blackText"
        app:layout_constraintBottom_toTopOf="@+id/button_size8"
        app:layout_constraintEnd_toStartOf="@+id/button_redText"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.491" />

</androidx.constraintlayout.widget.ConstraintLayout>
